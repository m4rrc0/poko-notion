{
  "name": "@m4rrc0/poko",
  "workspaces": [
    "website",
    "services/*",
    "astro-integrations/*",
    "packages/*"
  ],
  "scripts": {
    "dev:debug": "npm run dev:debug --workspace=website",
    "dev": "npm run dev --workspace=website",
    "start": "npm start --workspace=website",
    "build": "npm run build --workspace=website",
    "build:netlify": "cd website && npm run build",
    "preview": "npm run preview --workspace=website",
    "serve": "npm run serve --workspace=website",
    "clean": "npm run clean --workspace=website",
    "fetch:once": "npm run fetch:once --workspace=website",
    "fetch:watch": "npm run fetch:watch --workspace=website",
    "dev:watch": "npm run dev:watch --workspace=website"
  }
}
